{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "projects": {
    "redis": {
      "type": "library",
      "root": "libs/redis",
      "entryFile": "index",
      "sourceRoot": "libs/redis/src",
      "compilerOptions": {
        "tsConfigPath": "libs/redis/tsconfig.lib.json"
      }
    },
    "sentry": {
      "type": "library",
      "root": "libs/sentry",
      "entryFile": "index",
      "sourceRoot": "libs/sentry/src",
      "compilerOptions": {
        "tsConfigPath": "libs/sentry/tsconfig.lib.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "content-worker": {
      "type": "application",
      "root": "apps/content-worker",
      "entryFile": "main",
      "sourceRoot": "apps/content-worker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/content-worker/tsconfig.app.json"
      }
    },
    "kafka": {
      "type": "library",
      "root": "libs/kafka",
      "entryFile": "index",
      "sourceRoot": "libs/kafka/src",
      "compilerOptions": {
        "tsConfigPath": "libs/kafka/tsconfig.lib.json"
      }
    },
    "openai": {
      "type": "library",
      "root": "libs/openai",
      "entryFile": "index",
      "sourceRoot": "libs/openai/src",
      "compilerOptions": {
        "tsConfigPath": "libs/openai/tsconfig.lib.json"
      }
    },
    "queue": {
      "type": "library",
      "root": "libs/queue",
      "entryFile": "index",
      "sourceRoot": "libs/queue/src",
      "compilerOptions": {
        "tsConfigPath": "libs/queue/tsconfig.lib.json"
      }
    },
    "service": {
      "type": "library",
      "root": "libs/service",
      "entryFile": "index",
      "sourceRoot": "libs/service/src",
      "compilerOptions": {
        "tsConfigPath": "libs/service/tsconfig.lib.json"
      }
