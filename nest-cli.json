  "compilerOptions": {
    "assets": [
      {
        "include": "i18n/**/*",
        "outDir": "dist/apps/api/apps/api/src",
        "watchAssets": true
      }
    ],
    "webpack": false,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api"
}